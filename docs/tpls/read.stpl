{literal}
<style>
	body {
		font-family: sans;
	}
	.header { font-weight: bold; }

	.tpl { margin-top: 1em; }

	.tpl_file, .php_file, .output {
		border: 1px solid;
		padding: 6px;
	}

	.p-0 { padding: 0px; }
	.m-0 { margin: 0px; }
	hr {
		margin-top: 1em;
		margin-bottom: 1em;
		border: 1px solid gray;
		border-radius: 5px;
	}
</style>
{/literal}

<body>
<h1>{$doc_name}</h1>

<div class="php">
	<div class="header">
		PHP:
	</div>
	<div class="php_file">
		{$php_contents}
	</div>
</div>

<div class="tpl">
	<div class="header">
		Template:
	</div>
	<div class="tpl_file">
<pre class="m-0">{$tpl_contents}</pre>
	</div>
</div>

<div class="" style="margin-top: 1em;">
	<a href="{$doc_name}">View output</a>
</div>

<hr />

<div><b>Other documentation:</b></div>

<ul>
{foreach $doc_files as $file}
<li><a href="?doc={$file}">{$file}</a></li>
{/foreach}
</ul>
